<div class="container">
<p id="title">&nbsp;Food feed 
&nbsp;&nbsp;
</p>
<br>
<table>



<% @foods.reverse.each do |food| %>
  <tr>

    <td><img src=" http://stanford.edu/group/spacegrav/cgi-bin/form/uploads/<%= food.id %>.jpg" width="100",height="100" onError="this.src = 'http://stanford.edu/group/spacegrav/cgi-bin/form/uploads/default.png'"></td>
    <td>
    <td><ul><li><b><%= food.title %></b>
        <% if food.category == 1 %>
          <span class="label label-warning">Dessert
        <% elsif food.category == 2 %>
          <span class="label label-important">Non-veg
        <% elsif food.category == 3 %>
          <span class="label label-success">Vegetarian
        <% else %>
        <% end %></span>
      </li>
      <li><%= food.desc %></li>
      <li><p id="timestamp">Left out <%= time_ago_in_words(food.created_at) %> ago</p></li>
      <li><!-- food.location --></li>
      <li><%# link_to 'Show me!', food %>
      <%# link_to 'Edit', edit_food_path(food) %>
      <span><%= link_to 'Food\'s gone', food, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
    </td></li></ul>
  </tr>
<% end %>
</table>

<br />
</div>
