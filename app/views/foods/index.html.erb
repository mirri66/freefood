<div class="container">
<p id="title">&nbsp;Food feed 
&nbsp;&nbsp;
</p>
<br>
<table>

<% @foods.each do |food| %>
  <tr>

    <td><img src=" http://stanford.edu/group/spacegrav/cgi-bin/form/uploads/<%= food.id %>.jpg" width="100",height="100"></td>
    <td>
    <td><ul><li><b><%= food.title %></b>
        <% if food.category == 0 %>
          <span class="label label-success">Vegetarian
        <% elsif food.category == 1 %>
          <span class="label label-important">Non-veg
        <% else %>
          <span class="label label-warning">Dessert
        <% end %></span>
      </li>
      <li><%= food.desc %></li>
      <li><!-- food.location --></li>
      <li><%= link_to 'Show me!', food %> | 
      <%= link_to 'Edit', edit_food_path(food) %> | 
      <%= link_to 'Food\'s gone', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </td></li></ul>
  </tr>
<% end %>
</table>

<br />
</div>
