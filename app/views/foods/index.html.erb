<h1>Free Food!</h1>

<table>

<% @foods.each do |food| %>
  <tr>

    <td><%= image_tag(food.photo,size:"20x20" )%></td>
    <td><b><%= food.title %></b></td>
    <td><%= food.desc %></td>
    <td><%= food.category %></td>
    <td><%= food.location %></td>
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Remove', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Post Food', new_food_path %>
